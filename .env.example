# --- Trino connection ---
TRINO_HOST=trino.company.com
TRINO_PORT=443
TRINO_USER=your_user
TRINO_CATALOG=hive
TRINO_SCHEMA=analytics
TRINO_HTTP_SCHEME=https

# Optional (basic auth) - only if your Trino uses it
TRINO_BASIC_USER=
TRINO_BASIC_PASSWORD=

# Optional: headers/session properties
TRINO_SOURCE=sql-optimizer
TRINO_SESSION_PROPERTIES={"query_max_run_time":"5m"}

# --- LLM (OpenAI) ---
LLM_PROVIDER=openai
AI_API_KEY=sk-...
AI_MODEL=gpt-4.1-mini
OPENAI_TEMPERATURE=0

# --- Optimizer behavior ---
MAX_FIX_ATTEMPTS=2
EXPLAIN_TIMEOUT_SECONDS=60

# If true, reject non-SELECT queries
READ_ONLY_MODE=true
